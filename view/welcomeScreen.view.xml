<mvc:View
	controllerName="com.springer.workshopapp.controller.welcomeScreen"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
	    title="{i18n>welcomeTitle}"
	    enableScrolling="false">
        <content>
            <TileContainer
             id="AvailableApps"
             tileDelete="handleTileDelete"
             width="100%"  
             height="100%"  
			>
                <StandardTile
                    id="App_A"
                    icon="sap-icon://supplier"
                    type="None"
                    number="Vendors"
                    numberUnit="Details"
                    title=""
                    info="ERP"
                    press="onVendors"
                />
                <StandardTile 
                    id="App_B"
                    icon="sap-icon://upload"
                    type="None"
                    number="Example"
                    numberUnit="Single Screen"
                    title=""
                    info="Create some Content"
    				press="onOtherApp"
                />
                <StandardTile 
                    id="App_C"
                    icon="sap-icon://account"
                    type="None"
                    number="Account"
                    numberUnit="Head of"
                    title=""
                    info="Head of Account"
    				press="onHeadOfAccountPress"
                />
                <StandardTile 
                    id="App_D"
                    icon="sap-icon://factory"
                    type="None"
                    number="Consortium"
                    numberUnit=""
                    title=""
                    info=""
    				press="onConsortium"
                />
                <StandardTile 
                    id="App_E"
                    icon="sap-icon://insurance-house"
                    type="None"
                    number="Institution"
                    numberUnit=""
                    title=""
                    info=""
    				press="onInstitution"
                />
                <StandardTile 
                    id="App_F"
                    icon="sap-icon://employee-pane"
                    type="None"
                    number="Author"
                    numberUnit=""
                    title=""
                    info=""
    				press="onAuthor"
                />
                <StandardTile 
                    id="App_G"
                    icon="sap-icon://search"
                    type="None"
                    number="BPSearch"
                    numberUnit="just Search"
                    title=""
                    info=""
    				press="onBPSearch"
                />
                <StandardTile 
                    id="App_Z"
                    icon="sap-icon://example"
                    type="None"
                    number="Other"
                    numberUnit="App"
                    title=""
                    info="not Implemented yet"
    				press="onAnotherApp"
                />
            </TileContainer>
        </content>
		<footer>
			<Bar id="footerText">
			    <contentMiddle>
					<Text id="footerMessage" text=""/>
				</contentMiddle>
			</Bar>
		</footer>
	</Page>
</mvc:View>