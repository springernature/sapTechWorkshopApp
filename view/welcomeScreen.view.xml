<mvc:View
	controllerName="com.springer.workshopapp.controller.welcomeScreen"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
	    title="{i18n>welcomeTitle}"
	    enableScrolling="false">
        <content>
            <TileContainer
             id="AvailableApps"
             tileDelete="handleTileDelete"
             width="100%"  
             height="100%"  
			>
                <StandardTile
                    id="App_A"
                    icon="sap-icon://supplier"
                    type="None"
                    number="Vendors"
                    numberUnit="Details"
                    title=""
                    info="ERP"
                    press="onVendors"
                />
                <StandardTile 
                    id="App_B"
                    icon="sap-icon://cloud"
                    type="None"
                    number="Other"
                    numberUnit="App"
                    title=""
                    info="not Implemented yet"
    				press="onOtherApp"
                />
                <StandardTile 
                    id="App_C"
                    icon="sap-icon://cloud"
                    type="None"
                    number="Other"
                    numberUnit="App"
                    title=""
                    info="not Implemented yet"
    				press="onAnotherApp"
                />
                <StandardTile 
                    id="App_D"
                    icon="sap-icon://cloud"
                    type="None"
                    number="Other"
                    numberUnit="App"
                    title=""
                    info="not Implemented yet"
    				press="onAnotherApp"
                />
            </TileContainer>
        </content>
		<footer>
			<Bar id="footerText">
			    <contentMiddle>
					<Text id="footerMessage" text=""/>
				</contentMiddle>
			</Bar>
		</footer>
	</Page>
</mvc:View>