<mvc:View 
	controllerName="com.springer.workshopapp.controller.appController.HeadOfAccountMaster" 
	displayBlock="true" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m">
	<Page
		id="page"
		title="{i18n>masterTitle}"
		showNavButton="true"
		navButtonPress="onNavBack"> 
    <headerContent>
            <Button	icon="sap-icon://home"
                	press="handleNavToHome" />
	</headerContent>
		<subHeader>
			<Bar id="searchBar">
				<contentMiddle>
					<!-- Device Model Options: https://help.sap.com/saphelp_uiaddon10/helpdata/en/32/5b8edafcfa4c9c8fbd42455a60e379/content.htm -->
					<SearchField 
						id="searchField" 
						showRefreshButton="{device>/isNoTouch}" 
						placeholder="{i18n>masterSearchPlaceholder}"
						search="onSearch"
						tooltip="{i18n>masterSearchTooltip}" 
						width="100%">
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<!-- first radio button -> Attribute Options -->
		    <RadioButtonGroup	id="radbutVSearch" 
		    					width="100%" 
		    					columns="3" 
		    					selectedIndex="-1">
		        <buttons>
		            <RadioButton	id="radA_button_opt1" 
		            				groupName="radbutVSearch" 
		            				text="Attribute 1" />
		            <RadioButton	id="radA_button_opt2" 
		            				selected="true"
		            				groupName="radbutVSearch" 
		            				text="Attribute 2"  />
		        </buttons>
		    </RadioButtonGroup>
			<!-- second radio button -> search option -> equals  or  contains -->
		    <RadioButtonGroup	id="radbutVopt"
		    					width="100%" 
		    					columns="3" 
		    					selectedIndex="-1">
		        <buttons>
		            <RadioButton	id="radB_button_opt1"
		            				groupName="radbutVopt" 
		            				text="Equals" />
		            <RadioButton	id="radB_button_opt2"
		            				selected="true"
		            				groupName="radbutVopt" 
		            				text="Contains"  />
		        </buttons>
		    </RadioButtonGroup>
		    <Button text="Filter" width="100px" id="searchButton" press="onSearch"/>
		    
			<!-- list with HoT -->
			<List	id="HeadOfAccountMasterList" 
					items="{/WorkshopTestDataSet}"  
					mode="{device>/listMode}" 
					noDataText="{i18n>masterListNoDataText}" 
					select="onSelect" 
					growing="true" 
                    growingThreshold="30"
					growingScrollToLoad="true">
				<items>
					<ObjectListItem type="{device>/listItemType}"
									press="onSelect" 
									title="{Partner}" 
									number="{PartnerName}" 
									numberUnit="{HeadOfAccount}"/>
				</items>
			</List>
		</content>
<!--
		<footer>
			<Toolbar>
				
			</Toolbar>
		</footer>
-->
	</Page>
</mvc:View>